
<h1>My cart</h1>
<br>
<br>
<% if @cart.empty? %>
<br>
    <p>No items in cart.</p>
<% else %>
<ul>
    <% @cart.each do |search| %>
    <li>
        <%= search.name %> - 
        <%= link_to 'Remove from cart', remove_from_cart_path(search.folder_id), method: :delete %>
        <br>
    </li>
    <% end %>
</ul>
<% end %>


